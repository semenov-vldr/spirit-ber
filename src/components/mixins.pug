  // breadcrumbs
mixin breadcrumbs_icon
  svg(width="7" height="6" fill='#fff')
    use(href="./assets/img/sprite.svg#breadcrumbs")


// карточка партнера
mixin partnersItem(src)
  li.partners__item
    img.partners__logo(src=src)
