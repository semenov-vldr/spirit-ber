mixin equipmentSlidePaginationItem (num, name)
  li.equipment-slide-pagination__item
    u.equipment-slide-pagination__number=num
    span.equipment-slide-pagination__name=name

.equipment
  .container.equipment__container
    .equipment__tag Оборудование
    .equipment__slider.equipment-slider


      .equipment-slider__item.equipment-slide

        .equipment-slide__title Установка для лазерной резки

        ul.equipment-slide__pagination.equipment-slide-pagination
          +equipmentSlidePaginationItem('01', 'FIBER LCM R1530F')
          +equipmentSlidePaginationItem('02', 'LVD ORION 3015 PLUS')

        .equipment-slide__machine.equipment-slide-machine__list

          .equipment-slide-machine__item
            .equipment-slide-machine__image
              img(src="assets/img/equipment/01.png")


              .equipment-slide-machine__mark-wrapper.machine__mark--1(style="right:55%; bottom: 25%")
                span.equipment-slide-machine__mark
                .equipment-slide-machine__mark-info
                  p.equipment-slide-machine__mark-title Максимальный размер листа
                  p.equipment-slide-machine__mark-text Станок принимает заготовки габаритами до 3000х1500 мм

